{
    "name": "Chicken Manchurian",
    "servings": 4,
    "prepTime": "30 minutes",
    "cookTime": "20 minutes",
    "ingredients": [
        {
            "name": "boneless chicken breast",
            "amount": "1 pound"
        },
        {
            "name": "corn starch",
            "amount": "1/4 cup"
        },
        {
            "name": "all-purpose flour",
            "amount": "1/4 cup"
        },
        {
            "name": "egg",
            "amount": "1"
        },
        {
            "name": "vegetable oil",
            "amount": "1/4 cup"
        },
        {
            "name": "garlic",
            "amount": "2 cloves"
        },
        {
            "name": "ginger",
            "amount": "1 inch piece"
        },
        {
            "name": "green bell pepper",
            "amount": "1"
        },
        {
            "name": "onion",
            "amount": "1"
        },
        {
            "name": "tomato sauce",
            "amount": "1/2 cup"
        },
        {
            "name": "soy sauce",
            "amount": "1 tablespoon"
        },
        {
            "name": "vinegar",
            "amount": "1 tablespoon"
        },
        {
            "name": "sugar",
            "amount": "1 teaspoon"
        },
        {
            "name": "salt",
            "amount": "1 teaspoon"
        },
        {
            "name": "black pepper",
            "amount": "1/4 teaspoon"
        }
    ],
    "instructions": [
        "Cut the chicken into small bite-sized pieces.",
        "Mix the corn starch, all-purpose flour, and egg in a bowl. Dip the chicken pieces in the mixture to coat.",
        "Heat the vegetable oil in a pan over medium-high heat. Add the chicken pieces and fry until golden brown.",
        "Remove the chicken from the pan and set aside.",
        "In the same pan, add garlic and ginger. Cook until fragrant.",
        "Add the green bell pepper, onion, tomato sauce, soy sauce, vinegar, sugar, salt, and black pepper. Cook for 5 minutes.",
        "Add the fried chicken back into the pan and toss to coat in the sauce.",
        "Serve hot over rice."
    ]
}
